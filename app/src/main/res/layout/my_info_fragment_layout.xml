<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/my_info_fragment_user_layout"
        android:layout_alignParentTop="true"
        android:background="#fff"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@color/send_button_on_focus"
                android:id="@+id/my_info_fragment_user_image"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欧阳溜溜"
                android:textSize="20sp"
                android:textColor="@color/text_black"
                android:layout_below="@id/my_info_fragment_user_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/my_info_fragment_user_name"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/girl"
                android:layout_toRightOf="@id/my_info_fragment_user_name"
                android:layout_alignBottom="@id/my_info_fragment_user_name"
                android:layout_marginStart="5dp"
                android:id="@+id/my_info_fragment_user_sex"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="西安邮电大学\t软件工程学院"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/my_info_fragment_user_name"
                android:layout_marginTop="10dp"
                android:id="@+id/my_info_fragment_user_school"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
