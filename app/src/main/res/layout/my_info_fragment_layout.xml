    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/my_info_fragment_user_layout"
        android:layout_marginTop="30dp"
        android:id="@+id/my_info_fragment_run_layout"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/my_info_fragment_user_layout"
            android:background="#fff"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跑步记录"
                android:layout_centerInParent="true"
                android:textSize="15sp"
                android:id="@+id/my_info_fragment_run_image"
                android:textColor="@color/text_black"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/run_blue"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toLeftOf="@id/my_info_fragment_run_image"
                android:layout_marginEnd="20dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
