<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_info_background"
    >
    <RelativeLayout
        android:id="@+id/feedback_layout_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/title"
        >
        <ImageView
            android:id="@+id/feedback_back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            />

    </RelativeLayout>

    <EditText
        android:id="@+id/feedback_data"
        android:layout_below="@id/feedback_layout_title"
        android:layout_width="340dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:hint="您有什么意见或建议请告诉我们……"
        android:gravity="top"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/feedback_send_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/feedback_data"
        android:text="发送"
        android:gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@color/send_button_on_focus"
        android:textSize="18sp"
        />

</RelativeLayout>