<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_info_background"
    >
    <RelativeLayout
        android:id="@+id/about_boxin_title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/title"
        >
        <ImageView
            android:id="@+id/about_boxin_title_back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于博信"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/about_boxin_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/send_button_on_focus"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/about_boxin_title_layout"
        android:layout_marginTop="30dp"
        android:src="@mipmap/logo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="博信"
        android:layout_below="@id/about_boxin_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="@color/text_black"
        android:id="@+id/about_us_logo_text"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/about_us_logo_text"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:id="@+id/about_boxin_judge_us"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去评分"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/about_boxin_judge_us"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:id="@+id/about_boxin_join_us"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入我们"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            />

    </RelativeLayout>

</RelativeLayout>