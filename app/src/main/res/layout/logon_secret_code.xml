<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/logon_secret_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logon_secret_image"
        android:hint="请输入验证码"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:maxLines="1"
        android:id="@+id/logon_secret_code_input"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="确认"
        android:background="@drawable/ripple_style"
        android:layout_below="@id/logon_secret_code_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:id="@+id/logon_sure_button"
        />

</RelativeLayout>