<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <com.amap.api.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/run_activity_layout_map"
        >


    </com.amap.api.maps.MapView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textColor="@color/text_black"
        android:textSize="60sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/run_activity_layout_map"
        android:layout_marginTop="30dp"
        android:id="@+id/run_activity_km_data"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m"
        android:textColor="@color/text_black"
        android:textSize="15sp"
        android:layout_below="@id/run_activity_km_data"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:id="@+id/run_activity_km"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0\nmin"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/text_black"
        android:layout_below="@id/run_activity_km"
        android:layout_marginTop="50dp"
        android:layout_marginStart="80dp"
        android:id="@+id/run_activity_min"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0\nkm/h"
        android:textColor="@color/text_black"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@id/run_activity_km"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="80dp"
        android:id="@+id/run_activity_speed"
        />
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@mipmap/play"
        android:layout_below="@id/run_activity_min"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:id="@+id/run_activity_start_buttono"
        />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@mipmap/stop"
        android:layout_below="@id/run_activity_speed"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/run_activity_stop_button"
        />
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@mipmap/pause"
        android:layout_alignBottom="@id/run_activity_start_buttono"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:id="@+id/run_activity_pause_button"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="模式一 定位延迟 3s,不使用最近定位"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/location_mode_change_button"
        android:visibility="invisible"
        />

</RelativeLayout>