<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/lesson_item_background"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="足球"
        android:textColor="@color/text_black"
        android:textSize="25sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:id="@+id/choose_lesson_item_name"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="徐立峰"
        android:textSize="20sp"
        android:textColor="@color/text_black"
        android:layout_alignBottom="@id/choose_lesson_item_name"
        android:layout_toRightOf="@id/choose_lesson_item_name"
        android:layout_marginStart="10dp"
        android:id="@+id/choose_lesson_item_lesson_teacher"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="49/50人"
        android:layout_alignStart="@id/choose_lesson_item_name"
        android:layout_below="@id/choose_lesson_item_name"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:id="@+id/choose_lesson_item_lesson_counter"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.0学分"
        android:textSize="15sp"
        android:layout_alignBottom="@id/choose_lesson_item_lesson_counter"
        android:layout_toRightOf="@id/choose_lesson_item_lesson_counter"
        android:layout_marginStart="15dp"
        android:id="@+id/choose_lesson_item_credit"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/lesson_right"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:id="@+id/choose_lesson_item_choose_flag_image"
        android:visibility="invisible"
        />

</RelativeLayout>