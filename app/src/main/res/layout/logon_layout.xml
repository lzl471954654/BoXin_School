<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_info_background"
    >
    <EditText
        android:id="@+id/logon_user_id"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="请输入学号"
        android:paddingStart="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:layout_marginStart="80dp"
        android:background="#fff"
        android:textSize="15sp"
        android:text="04151018"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/logon_password"
        android:paddingStart="15dp"
        android:layout_marginStart="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logon_user_id"
        android:background="#fff"
        android:hint="请输入密码"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:inputType="textPassword"
        android:text="lzl471954654"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/clear_icon"
        android:layout_alignEnd="@id/logon_user_id"
        android:layout_alignTop="@id/logon_user_id"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/logon_clear"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_below="@id/logon_password"
        android:layout_marginTop="45dp"
        android:text="登 录"
        android:textColor="#fff"
        android:id="@+id/logon_logon_button"
        android:background="@drawable/ripple_style"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/eye_cant_see"
        android:layout_alignEnd="@id/logon_password"
        android:layout_alignBottom="@id/logon_password"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/logon_eyes"
        />


</RelativeLayout>